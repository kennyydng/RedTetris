{
  "name": "red_tetrisboilerplate",
  "version": "0.0.1",
  "author": "redpelicans",
  "license": "MIT",
  "scripts": {
    "eslint": "eslint src --ext .js,.jsx",
    "client-dist": "NODE_ENV=production webpack --mode=production",
    "client-dev": "webpack serve --mode=development --hot --host 0.0.0.0 --port 8080",
    "srv-dev": "DEBUG=tetris:* nodemon --exec babel-node src/server/main.js",
    "srv-dist": "DEBUG=tetris:* babel src --out-dir dist",
    "dev": "concurrently \"npm run srv-dev\" \"npm run client-dev\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\"",
    "test": "mocha --require @babel/register --reporter spec",
    "coverage": "NODE_ENV=test nyc --include src --all -r text -r lcov -r text --require @babel/register mocha"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^7.9.3",
    "redux-logger": "^3.0.6",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.5",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@babel/register": "^7.22.15",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^13.4.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.3",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "postcss": "^8.5.6",
    "react-refresh": "^0.18.0",
    "redux": "^5.0.1",
    "tailwindcss": "^4.1.14",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "nyc": {
    "exclude": [
      "build"
    ]
  }
}
